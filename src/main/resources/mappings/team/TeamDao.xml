<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="qya.pousheng.demo.dao.team.TeamDao">
	<resultMap id="TeamResultMap" type="qya.pousheng.demo.model.team.Team">
		<id property="teamId" column="TEAM_ID" />
		<result property="teamName" column="TEAM_NAME" />
		<result property="createDate" column="CREATE_DATE" />
	</resultMap>

	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		TEAM_ID
		,TEAM_NAME
		,CREATE_DATE
	</sql>

	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
		<if test="teamId != null and teamId != ''">
			AND TEAM_ID = #{teamId,jdbcType=VARCHAR}
		</if>
		<if test="teamName != null and teamName != ''">
			AND TEAM_NAME = #{teamName,jdbcType=VARCHAR}
		</if>
		<if test="createDate != null and createDate != ''">
			AND CREATE_DATE = #{createDate,jdbcType=DATE}
		</if>
	</sql>

	<select id="find" resultMap="TeamResultMap">

		SELECT
		<include refid="base_column" />
		FROM t_team
		WHERE TEAM_ID=#{teamId,jdbcType=VARCHAR}

	</select>

	<select id="findByPk" resultMap="TeamResultMap">

		SELECT
		<include refid="base_column" />
		FROM t_team
		WHERE TEAM_ID=#{teamId,jdbcType=VARCHAR}
		
	</select>

	<select id="findByPage" resultMap="TeamResultMap">

		SELECT
		<include refid="base_column" />
		FROM t_team
		<where>
			<include refid="where_column" />
		</where>

	</select>
	
	<insert id="insert" parameterType="qya.pousheng.demo.model.team.Team">

		INSERT INTO t_team
		(TEAM_ID
		,TEAM_NAME
		,CREATE_DATE
		)
		VALUES (#{teamId,jdbcType=VARCHAR}
		,#{teamName}
		,#{createDate}
		)

	</insert>

	<update id="update" parameterType="qya.pousheng.demo.model.team.Team">

		UPDATE t_team
		<set>
			<if test="teamId != null and teamId != ''">
				TEAM_ID = #{teamId,jdbcType=VARCHAR},
			</if>
			<if test="teamName != null and teamName != ''">
				TEAM_NAME = #{teamName,jdbcType=VARCHAR},
			</if>
			<if test="createDate != null and createDate != ''">
				CREATE_DATE = #{createDate,jdbcType=DATE},
			</if>
		</set>
		WHERE TEAM_ID = #{teamId,jdbcType=VARCHAR}
		
	</update>

	<delete id="deleteByPk">

		DELETE FROM t_team
		WHERE TEAM_ID = #{teamId,jdbcType=VARCHAR}
		
	</delete>

	<delete id="delete">

		DELETE FROM t_team
		WHERE TEAM_ID
		IN
		<foreach item="teamId" index="index" collection="array" open="(" separator="," close=")">
			#{teamId}
		</foreach>

	</delete>
	
	
</mapper> 
