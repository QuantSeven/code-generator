<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace必须指向Dao接口 -->
<mapper namespace="qya.pousheng.demo.dao.team.TeamPlayerDao">
	<resultMap id="TeamPlayerResultMap" type="qya.pousheng.demo.model.team.TeamPlayer">
		<id property="playerId" column="PLAYER_ID" />
		<result property="playerNo" column="PLAYER_NO" />
		<result property="playerName" column="PLAYER_NAME" />
		<result property="teamId" column="TEAM_ID" />
	</resultMap>

	<!-- 定义可重用的SQL代码段，可以包含在其他语句中 -->
	<sql id="base_column">
		PLAYER_ID
		,PLAYER_NO
		,PLAYER_NAME
		,TEAM_ID
	</sql>

	<!-- 定义可重用的WHERE SQL公共代码段，可以包含在其他语句中 -->
	<sql id="where_column">
		<if test="playerId != null and playerId != ''">
			AND PLAYER_ID = #{playerId,jdbcType=VARCHAR}
		</if>
		<if test="playerNo != null and playerNo != ''">
			AND PLAYER_NO = #{playerNo,jdbcType=VARCHAR}
		</if>
		<if test="playerName != null and playerName != ''">
			AND PLAYER_NAME = #{playerName,jdbcType=VARCHAR}
		</if>
		<if test="teamId != null and teamId != ''">
			AND TEAM_ID = #{teamId,jdbcType=VARCHAR}
		</if>
	</sql>

	<select id="find" resultMap="TeamPlayerResultMap">

		SELECT
		<include refid="base_column" />
		FROM t_team_player
		WHERE PLAYER_ID=#{playerId,jdbcType=VARCHAR}

	</select>

	<select id="findByPk" resultMap="TeamPlayerResultMap">

		SELECT
		<include refid="base_column" />
		FROM t_team_player
		WHERE PLAYER_ID=#{playerId,jdbcType=VARCHAR}
		
	</select>

	<select id="findByPage" resultMap="TeamPlayerResultMap">

		SELECT
		<include refid="base_column" />
		FROM t_team_player
		<where>
			<include refid="where_column" />
		</where>

	</select>
	
	<insert id="insert" parameterType="qya.pousheng.demo.model.team.TeamPlayer">

		INSERT INTO t_team_player
		(PLAYER_ID
		,PLAYER_NO
		,PLAYER_NAME
		,TEAM_ID
		)
		VALUES (#{playerId,jdbcType=VARCHAR}
		,#{playerNo}
		,#{playerName}
		,#{teamId}
		)

	</insert>

	<update id="update" parameterType="qya.pousheng.demo.model.team.TeamPlayer">

		UPDATE t_team_player
		<set>
			<if test="playerId != null and playerId != ''">
				PLAYER_ID = #{playerId,jdbcType=VARCHAR},
			</if>
			<if test="playerNo != null and playerNo != ''">
				PLAYER_NO = #{playerNo,jdbcType=VARCHAR},
			</if>
			<if test="playerName != null and playerName != ''">
				PLAYER_NAME = #{playerName,jdbcType=VARCHAR},
			</if>
			<if test="teamId != null and teamId != ''">
				TEAM_ID = #{teamId,jdbcType=VARCHAR},
			</if>
		</set>
		WHERE PLAYER_ID = #{playerId,jdbcType=VARCHAR}
		
	</update>

	<delete id="deleteByPk">

		DELETE FROM t_team_player
		WHERE PLAYER_ID = #{playerId,jdbcType=VARCHAR}
		
	</delete>

	<delete id="delete">

		DELETE FROM t_team_player
		WHERE PLAYER_ID
		IN
		<foreach item="teamPlayerId" index="index" collection="array" open="(" separator="," close=")">
			#{teamPlayerId}
		</foreach>

	</delete>
	
	<select id="findByTeamId" resultMap="TeamPlayerResultMap">
		SELECT
		<include refid="base_column" />
		FROM t_team_player
		<where>
			<include refid="where_column" />
		</where>
	</select>
	
</mapper> 
